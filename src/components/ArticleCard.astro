---
import Tag from "./Tag.astro";
import Text from "./Text.astro";

interface Props {
  title: string;
  publishedAt: string;
  tags: string[];
  thumbnail: string;
  link: string;
}

const {title, publishedAt, tags, link, thumbnail} = Astro.props;
---

<a target="_blank" href={link} class="article-card">
  <img src={thumbnail} />
  <Text weight={600} lineHeight={1.4} color="var(--black)" size="1.2rem">{title}</Text>
  <Text weight={300} size=".6rem">{publishedAt}</Text>
  <div class="row">
    {tags.map(tag => <Tag label={tag} />)}
  </div>
</a>

<style>
  .article-card {
    display: flex;
    flex-direction: column;
    align-items: start;
    padding: 16px;
    text-decoration: none;
    color: var(--color-text);
    gap: 16px;
    border-radius: 5px;
    border: 1px solid var(--color-white);
    background-color: var(--color-background);
    transition: all 0.5s linear;
  }

  .article-card:hover {
    border: 1px solid var(--color-border);
  }

  img {
    width: 100%;
    height: 100px;
    object-fit: cover;
    border-radius: 8px;
  }

  .row {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    width: 100%;
  }
</style>