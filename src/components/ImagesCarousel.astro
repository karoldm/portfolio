---
import { Image } from "astro:assets";

interface Props {
  images: ImageMetadata[];
}

const { images } = Astro.props;
---

<swiper-container class="mySwiper" effect="cards" grab-cursor="true">
  {
    images.map((src) => (
      <swiper-slide>
        <Image
          class="pic"
          src={src}
          alt="project image"
          width={180}
          height={360}
        />
      </swiper-slide>
    ))
  }
</swiper-container>
<script
  src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-element-bundle.min.js"
></script>

<style>
  swiper-container {
    width: 180px;
    height: 360px;
    border-radius: 16px;
  }

  swiper-slide {
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 16px;
  }

  .pic {
    width: 100%;
    height: 100%;
    border-radius: 16px;
    object-fit: cover;
  }
</style>
